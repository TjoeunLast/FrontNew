{
  "expo": {
    "name": "barotruck-app",
    "slug": "barotruck-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "barotruckapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "사용자 주변의 오더를 확인하기 위해 위치 권한이 필요합니다."
      },
      "bundleIdentifier": "com.barotruck", // Firebase 콘솔에 등록한 Bundle ID와 일치해야 함
      "googleServicesFile": "./GoogleService-Info.plist" // ✅ 이 줄 추가
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": ["ACCESS_COARSE_LOCATION", "ACCESS_FINE_LOCATION"],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.barotruck", // Firebase 콘솔에 등록한 패키지명과 일치해야 함
      "googleServicesFile": "./google-services.json" // ✅ 이 줄 추가
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "@react-native-community/datetimepicker",
      "@react-native-firebase/app",
      "@react-native-firebase/messaging"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
